%header.main-header
  %h1
    Die Tafel
  %nav
    = select_tag "current_language", options_from_collection_for_select(@languages, "key", "name", current_language.key)

%section.main-content
  %ul
    - @categories.each do |category|
      %li
        %h2
          = category.name
        %ol
          - category.phrases.where(language: current_language).each do |phrase|
            %li
              .text
                = phrase.text
              .translation
                = phrase.translation
